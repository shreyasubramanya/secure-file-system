<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <style>
        /**/
    </style>
</body>
<h1>Home</h1>
<form action="/uploadFile" method="post" enctype="multipart/form-data">
    <input type="file" name="file">
    <input type="submit" value="Upload">
</form>

<form action="/deleteFile" method="post">
    <label for="deleteFile">Select a file to delete:</label>
    <select id="deleteFile" name="fileName">
        <!-- Dynamically populated list of files will go here -->
    </select>
    <input type="submit" value="Delete">
</form>

<form action="/downloadFile/" method="get">
    <label for="downloadFile">Select a file to download:</label>
    <select id="downloadFile" name="fileName">
        <!-- Dynamically populated list of files will go here -->
    </select>
    <input type="submit" value="Download">
</form>

<p action="/list" method="get">This should be list</p>
<ul id="fileList"></ul>
<script>
  // Fetch the list of files from the server
  fetch('/list', { method: 'POST' })
    .then(response => response.json())
    .then(files => {
      // Update the fileList element with the list of files
      const fileListElement = document.getElementById('fileList');
      const deleteFileSelect = document.getElementById('deleteFile');
      const downloadFileSelect = document.getElementById('downloadFile');

      files.forEach(file => {
        // Create an option for each file in the dropdown lists
        const deleteOption = document.createElement('option');
        deleteOption.value = file.fileName;
        deleteOption.textContent = file.fileName;
        deleteFileSelect.appendChild(deleteOption);

        const downloadOption = document.createElement('option');
        downloadOption.value = file.fileName;
        downloadOption.textContent = file.fileName;
        downloadFileSelect.appendChild(downloadOption);

        // Create an li element for the file list
        const listItem = document.createElement('li');
        listItem.textContent = file.fileName;
        fileListElement.appendChild(listItem);
      });
    })
    .catch(error => console.error('Error fetching file list:', error));
</script>
</html>